package com.example.nagoyameshi.repository;

import java.util.List;

import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import com.example.nagoyameshi.entity.Restaurant;

public interface RestaurantRepository extends JpaRepository<Restaurant, Integer> {

    // 名前検索（管理画面など）
    Page<Restaurant> findByNameLike(String keyword, Pageable pageable);

    // キーワード検索（名前または住所）＋並び順
    Page<Restaurant> findByNameLikeOrAddressLikeOrderByCreatedAtDesc(String nameKeyword, String addressKeyword, Pageable pageable);  
    Page<Restaurant> findByNameLikeOrAddressLikeOrderByLowestPriceAsc(String nameKeyword, String addressKeyword, Pageable pageable);  

    // エリア検索
    Page<Restaurant> findByAddressLikeOrderByCreatedAtDesc(String area, Pageable pageable);
    Page<Restaurant> findByAddressLikeOrderByLowestPriceAsc(String area, Pageable pageable);

    // 金額検索
    Page<Restaurant> findByLowestPriceLessThanEqualOrderByCreatedAtDesc(Integer lowestPrice, Pageable pageable);
    Page<Restaurant> findByLowestPriceLessThanEqualOrderByLowestPriceAsc(Integer lowestPrice, Pageable pageable); 

    // 全件取得（並び順指定）
    Page<Restaurant> findAllByOrderByCreatedAtDesc(Pageable pageable);
    Page<Restaurant> findAllByOrderByLowestPriceAsc(Pageable pageable);

    // カテゴリ検索（部分一致＆並び順付き）
    Page<Restaurant> findByCategoryLikeOrderByCreatedAtDesc(String category, Pageable pageable);
    Page<Restaurant> findByCategoryLikeOrderByLowestPriceAsc(String category, Pageable pageable); 

    // 新着レストラン（トップページ用）
    List<Restaurant> findTop10ByOrderByCreatedAtDesc();

    // カテゴリ一覧の重複除去
    @Query("SELECT DISTINCT r.category FROM Restaurant r")
    List<String> findAllDistinctCategories();   
}
