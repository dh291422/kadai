package com.example.nagoyameshi.config;

import org.springframework.security.core.annotation.AuthenticationPrincipal;
import org.springframework.web.bind.annotation.ControllerAdvice;
import org.springframework.web.bind.annotation.ModelAttribute;

import com.example.nagoyameshi.security.CustomUserDetails;
import com.example.nagoyameshi.entity.User;

@ControllerAdvice
public class ControllerAdvice {

    @ModelAttribute("user")
    public User setUser(@AuthenticationPrincipal CustomUserDetails userDetails) {
        if (userDetails != null) {
            return userDetails.getUser(); // ← Userエンティティを返す
        }
        return null;
    }
}
